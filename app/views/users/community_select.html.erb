<!DOCTYPE html>
<html>
  <head>
    <script type="text/javascript" src="http://twitter.github.com/bootstrap/assets/js/bootstrap-dropdown.js">$('.dropdown-toggle').dropdown()</script>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/header' %>
  </head>
  <body>


  <div class="container">
    <div class="combox">
        <%= form_for(@user) do |f| %>
        <%= f.label :community_id, 'Select Community:', class: "comtit" %>
        <%= f.select :community_id, options = {'Community' => '',
                                       'Amherst College' => '1',
                                       'University of Rochester' => '2',
                                       'Macalester College' => '3'}, class: "comsel" %>
        <%= f.submit%>
        <% end %>
  </div>
              <div class="btn-group commhighlight">
                <a class="btn dropdown-toggle" data-toggle="dropdown" data-target="#" href="path/to/page.html">
                    Select Community
                    <span class="caret"></span>
                </a>
                    <ul class="dropdown-menu">

                      <li><a href="#">Amherst College</a></li>
                      <li><a href="#">Macalester College</a></li>
                      <li><a href="#">University of Rochester</a></li>

                    </ul>
              </div>

  </br></br></br></br></br></br></br></br></br></br>

        <%= render 'layouts/footer' %>
    </div>
  </body>
</html>