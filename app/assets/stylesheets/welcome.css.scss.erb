@import "bootstrap";
@charset "utf-8";
/* CSS Document */

html {
  overflow-y: scroll;
}

body {
  padding-top: 60px;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
}

.center h1 {
  margin-bottom: 10px;
}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  text-align:left;
  font-size: 2em;
  letter-spacing: -2px;
  line-height:1.4em;
}

h2 {
  font-size: 1.7em;
  letter-spacing: -1px;
  margin-bottom: 0px;

  font-weight: normal;
  color: #999;
}

h3 {
    color: #000;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}
.logdesc {
    line-height: 1.4em;
    font-size: 1.4em;
    color: #999;
}
.desc {
    margin-top: 30px;
    line-height: 1.5em;
    font-size: 1.7em;
    color: #999;
}

/* Login Box */

 .signin {
  width: 300px;
  background-color: #f7f6f6;
  border: 1px #ecebeb solid;
  border-radius: 3px;
  padding-left: 10px;
  padding-top: 5px;
  padding-bottom: 10px;
}
.fbbtn {
    display: block;
	width: 220px;
	height: 44px;
    margin-top: 15px;
	background: url(<%=asset_path "fb_login.png"%>) bottom;
	text-indent: -99999px;
}
.fbbtn:hover {
	background-position: 0 0;
}

.loginitems {
    margin:10px;
}
.tit {
   font-size: 1.4em;
   color: #999;
}

.flierlogo {
   float:right;
   width: 560px;
   height: 125px;
   z-index:100;
}
