/*  Channels  */

.channels {
    position: relative;
    left: 25px;
    top:10px;
    z-index:5000;
    word-spacing: 124px;
    font-family: arial;
    font-size: 1.2em;
    text-shadow: -1px -1px #666666;
}
.iconbar {
    position: relative;
    z-index:-10;
    left: -45px;
    top: -30px;
    background-image: url(<%=asset_path "icon_bar.png"%>);
    height:46px;
}

.channels a:link {
    color: #fff;
}
.channels a:visited {
    color: #fff;
}
